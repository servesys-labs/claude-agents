{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Grep",
      "Glob",
      "Task",
      "NotebookEdit",
      "TodoWrite",
      "SlashCommand",
      "KillShell",
      "BashOutput",
      "ExitPlanMode",
      "WebFetch",
      "WebSearch"
    ]
  },
  "mcpServers": {
    "vector-bridge": {
      "command": "node",
      "args": ["/Users/agentsy/.claude/mcp-servers/vector-bridge/dist/index.js"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL_MEMORY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "REDIS_URL": "${REDIS_URL}"
      }
    },
    "openai-bridge": {
      "command": "node",
      "args": ["/Users/agentsy/.claude/mcp-servers/openai-bridge/dist/index.js"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "perplexity-ask": {
      "command": "node",
      "args": ["/Users/agentsy/.claude/mcp-servers/perplexity-ask/dist/index.js"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "ui-template-bridge": {
      "command": "node",
      "args": ["/Users/agentsy/.claude/mcp-servers/ui-template-bridge/dist/index.js"],
      "env": {
        "UI_TEMPLATE_API_URL": "https://ui-template-api-production-production.up.railway.app"
      }
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Grep|Glob|Web(Search|Fetch)|Task|Bash|mcp__perplexity__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/auto_project_setup.py\""
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/memory_context_inject.py\""
          },
          {
            "type": "command",
            "command": "env WSI_PATH=\"$CLAUDE_PROJECT_DIR/.claude/logs/wsi.json\" LOGS_DIR=\"$CLAUDE_PROJECT_DIR/.claude/logs\" python3 \"$HOME/.claude/hooks/pretooluse_validate.py\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|Task|Bash|Web(Search|Fetch)|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/routing_enforcer.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/md_spam_preventer.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/posttooluse_validate.py"
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/grep_summarizer.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/tool_output_compactor.py"
          }
        ]
      },
      {
        "matcher": "mcp__openai-bridge__ask_gpt.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/gpt5_cost_tracker.py"
          }
        ]
      },
      {
        "matcher": "mcp__perplexity-ask__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/perplexity_tracker.py"
          }
        ]
      },
      {
        "matcher": "mcp__vector-bridge__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/mcp_cost_tracker.py"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/task_digest_capture.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "env WSI_PATH=\"$CLAUDE_PROJECT_DIR/.claude/logs/wsi.json\" LOGS_DIR=\"$CLAUDE_PROJECT_DIR/.claude/logs\" ENABLE_VECTOR_RAG=\"true\" python3 \"$HOME/.claude/hooks/stop_digest.py\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/precompact_summary.py"
          }
        ]
      }
    ],
    "PostCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "env ENABLE_VECTOR_RAG=\"true\" LOGS_DIR=\"$CLAUDE_PROJECT_DIR/.claude/logs\" python3 $HOME/.claude/hooks/conversation_summary_ingest.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/routing_reminder.py"
          },
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/log_analyzer.py"
          },
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/md_request_detector.py"
          },
          {
            "type": "command",
            "command": "python3 $HOME/.claude/hooks/pivot_manager.py"
          }
        ]
      }
    ]
  }
}
