{
  "name": "ui-template-bridge-mcp",
  "version": "1.0.1",
  "description": "MCP server for UI template discovery, preview, and stamping. Provides AI agents with visual screenshots and metadata for Next.js and React Native templates.",
  "main": "dist/index.js",
  "type": "module",
  "author": "Agentsy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ui-template-bridge.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ui-templates",
    "nextjs",
    "react-native",
    "screenshot",
    "template-discovery",
    "ai-agents"
  ],
  "files": [
    "dist/**/*",
    "screenshots/catalog.json",
    "screenshots/INDEX.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "ui-template-bridge": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.0",
    "playwright": "^1.40.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
